---
/**
 * S-TIER GOD MODE — Composant SEO Centralisé
 *
 * Gère le SEO avancé avec:
 * - Title / Description
 * - Canonical URL
 * - Open Graph
 * - Twitter Cards
 * - JSON-LD (Schema.org)
 *
 * @usage <SEO title="Ma Page" description="Description" type="WebPage" />
 */
import { Schema } from "astro-seo-schema";
import { getEntry } from "astro:content";

interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
  ogType?: "website" | "article" | "video.other";
  type?: "WebPage" | "VideoObject" | "Person" | "CreativeWork";
  publishedTime?: string;
  modifiedTime?: string;
  noIndex?: boolean;
}

// SSOT: Company data from Content Collections
const company = await getEntry("config", "company");
const siteUrl = company?.data.siteUrl || "https://steeflinesono.fr";
const siteName = company?.data.name || "DJ Steef Line Sono";

const {
  title = company?.data.defaultTitle ||
    "DJ Steef Line Sono | Créateur d'événements",
  description = company?.data.defaultDescription ||
    "DJ Professionnel en Nouvelle-Aquitaine",
  canonical = Astro.url.href,
  ogImage = company?.data.defaultImage || "/og-image.jpg",
  ogType = "website",
  type = "WebPage",
  publishedTime,
  modifiedTime,
  noIndex = false,
} = Astro.props;

const fullOgImage = ogImage.startsWith("http")
  ? ogImage
  : `${siteUrl}${ogImage}`;
---

<!-- SEO Meta Tags -->
<title>{title}</title>
<meta name="description" content={description} />
<link rel="canonical" href={canonical} />

{noIndex && <meta name="robots" content="noindex, nofollow" />}

<!-- Open Graph -->
<meta property="og:type" content={ogType} />
<meta property="og:site_name" content={siteName} />
<meta property="og:url" content={canonical} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={fullOgImage} />
<meta property="og:image:alt" content={title} />
<meta property="og:locale" content="fr_FR" />

{
  publishedTime && (
    <meta property="article:published_time" content={publishedTime} />
  )
}
{
  modifiedTime && (
    <meta property="article:modified_time" content={modifiedTime} />
  )
}

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={fullOgImage} />

<!-- JSON-LD Schema.org: Person (DJ) -->
<Schema
  item={{
    "@context": "https://schema.org",
    "@type": "Person",
    "@id": `${siteUrl}/#person`,
    name: siteName,
    url: siteUrl,
    image: fullOgImage,
    description: company?.data.description,
    jobTitle: "DJ Professionnel",
    sameAs: [
      company?.data.social?.facebook,
      company?.data.social?.instagram,
    ].filter(Boolean) as string[],
  }}
/>

<!-- JSON-LD Schema.org: WebPage -->
<Schema
  item={{
    "@context": "https://schema.org",
    "@type": type,
    name: title,
    description: description,
    url: canonical,
    image: fullOgImage,
    author: {
      "@type": "Person",
      "@id": `${siteUrl}/#person`,
    },
    ...(publishedTime
      ? {
          datePublished: publishedTime,
          dateModified: modifiedTime || publishedTime,
        }
      : {}),
  }}
/>
