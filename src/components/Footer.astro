---
/**
 * S-TIER — Footer Component
 * Dark minimalist footer with social links
 */
import { getEntry } from "astro:content";

const company = await getEntry("config", "company");
const currentYear = new Date().getFullYear();

const socialLinks = [
  {
    name: "YouTube",
    url: company?.data.social?.youtube,
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/></svg>`,
  },
  {
    name: "Instagram",
    url: company?.data.social?.instagram,
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>`,
  },
];
---

<footer class="footer">
  <div class="footer__container container">
    <!-- Brand -->
    <div class="footer__brand">
      <a href="/" class="footer__logo"
        >{company?.data.name || "Rémi Capdeville"}</a
      >
      <p class="footer__tagline">
        {company?.data.description || "Vidéaste Professionnel"}
      </p>
    </div>

    <!-- Social Links -->
    <div class="footer__social">
      {
        socialLinks.map(
          (social) =>
            social.url && (
              <a
                href={social.url}
                target="_blank"
                rel="noopener noreferrer"
                class="footer__social-link"
                aria-label={`Suivez-moi sur ${social.name}`}
              >
                <Fragment set:html={social.icon} />
              </a>
            )
        )
      }
    </div>

    <!-- Copyright -->
    <div class="footer__copyright">
      <p>
        © {currentYear}
        {company?.data.name || "Rémi Capdeville"}. Tous droits réservés.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-bg-secondary);
    border-top: 1px solid var(--glass-border);
    padding: 3rem 0;
  }

  .footer__container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    text-align: center;
  }

  /* Brand */
  .footer__logo {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-primary);
    text-decoration: none;
  }

  .footer__tagline {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-top: 0.5rem;
  }

  /* Social */
  .footer__social {
    display: flex;
    gap: 1rem;
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    color: var(--color-text-secondary);
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: 50%;
    transition: all 0.3s ease;
  }

  .footer__social-link:hover {
    color: var(--color-accent);
    border-color: var(--color-accent);
    transform: translateY(-2px);
  }

  /* Copyright */
  .footer__copyright {
    font-size: 0.8125rem;
    color: var(--color-text-muted);
  }

  @media (min-width: 768px) {
    .footer__container {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
  }
</style>
