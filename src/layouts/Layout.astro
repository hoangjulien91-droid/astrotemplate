---
/**
 * S-TIER GOD MODE — Layout Maître
 *
 * Layout principal avec:
 * - ViewTransitions pour navigation SPA-like
 * - SEO de base
 * - Fonts préchargées
 * - Global styles
 */
import { ViewTransitions } from "astro:transitions";
import "@/styles/global.css";

interface Props {
  title: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
  noIndex?: boolean;
}

const {
  title,
  description = "Application S-Tier God Mode construite avec Astro V5.",
  canonical = Astro.url.href,
  ogImage = "/og-image.png",
  noIndex = false,
} = Astro.props;

const siteUrl = "https://example.com"; // TODO: Récupérer depuis Content Collection config
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <!-- SEO Meta -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />
    <meta name="generator" content={Astro.generator} />

    {noIndex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${siteUrl}${ogImage}`} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${siteUrl}${ogImage}`} />

    <!-- Fonts: Préchargement Google Fonts (Inter) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- S-TIER: View Transitions pour navigation SPA-like -->
    <ViewTransitions />
  </head>
  <body class="min-h-screen bg-white text-gray-900 antialiased">
    <!-- Main Content Slot -->
    <slot />
  </body>
</html>

<style is:global>
  /* Base Reset */
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  html {
    font-family: "Inter", system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    min-height: 100vh;
  }

  /* Focus Visible pour Accessibilité */
  :focus-visible {
    outline: 2px solid currentColor;
    outline-offset: 2px;
  }
</style>
