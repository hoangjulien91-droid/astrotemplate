---
/**
 * Contact Page
 */
import Layout from "@/layouts/Layout.astro";
import { getEntry } from "astro:content";

const company = await getEntry("config", "company");
---

<Layout
  title="Contact | Rémi Capdeville"
  description="Contactez Rémi Capdeville pour discuter de votre projet vidéo."
>
  <section class="hero-section">
    <div class="container">
      <h1 class="page-title">Contact</h1>
      <p class="page-subtitle">Un projet en tête ? Parlons-en !</p>
    </div>
  </section>

  <section class="section contact-section">
    <div class="container">
      <div class="contact-grid">
        <!-- Contact Form -->
        <div class="contact-form-wrapper glass-card">
          <h2>Envoyez-moi un message</h2>
          <form
            class="contact-form"
            action="https://formspree.io/f/YOUR_FORM_ID"
            method="POST"
          >
            <div class="form-group">
              <label for="name">Nom complet</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                placeholder="Votre nom"
              />
            </div>

            <div class="form-group">
              <label for="email">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                placeholder="votre@email.com"
              />
            </div>

            <div class="form-group">
              <label for="subject">Sujet</label>
              <select id="subject" name="subject" required>
                <option value="">Sélectionnez un sujet</option>
                <option value="corporate">Vidéo Corporate</option>
                <option value="music">Clip Musical</option>
                <option value="wedding">Film de Mariage</option>
                <option value="event">Événementiel</option>
                <option value="other">Autre projet</option>
              </select>
            </div>

            <div class="form-group">
              <label for="message">Message</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                placeholder="Décrivez votre projet..."></textarea>
            </div>

            <!-- Honeypot anti-spam -->
            <div class="form-group" style="display: none;">
              <input type="text" name="_gotcha" />
            </div>

            <button type="submit" class="btn btn-primary btn-full">
              Envoyer le message
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <line x1="22" y1="2" x2="11" y2="13"></line>
                <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
              </svg>
            </button>
          </form>
        </div>

        <!-- Contact Info -->
        <div class="contact-info">
          <div class="info-card glass-card">
            <h3>Informations</h3>

            {
              company?.data.email && (
                <div class="info-item">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <rect x="2" y="4" width="20" height="16" rx="2" />
                    <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
                  </svg>
                  <a href={`mailto:${company.data.email}`}>
                    {company.data.email}
                  </a>
                </div>
              )
            }

            {
              company?.data.phone && (
                <div class="info-item">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" />
                  </svg>
                  <a href={`tel:${company.data.phone}`}>{company.data.phone}</a>
                </div>
              )
            }

            <div class="info-item">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
              <span>{company?.data.address?.city || "France"}</span>
            </div>
          </div>

          <!-- Social Links -->
          <div class="social-card glass-card">
            <h3>Réseaux Sociaux</h3>
            <div class="social-links">
              {
                company?.data.social?.youtube && (
                  <a
                    href={company.data.social.youtube}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="social-link"
                    aria-label="YouTube"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                    >
                      <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z" />
                    </svg>
                  </a>
                )
              }
              {
                company?.data.social?.instagram && (
                  <a
                    href={company.data.social.instagram}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="social-link"
                    aria-label="Instagram"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                    >
                      <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                    </svg>
                  </a>
                )
              }
            </div>
          </div>

          <!-- Response Time -->
          <div class="response-card glass-card">
            <h3>Délai de réponse</h3>
            <p>
              Je réponds généralement sous <strong>24-48 heures</strong> les jours
              ouvrés.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .hero-section {
    padding-top: 10rem;
    padding-bottom: 4rem;
    text-align: center;
  }

  .page-title {
    font-size: clamp(2.5rem, 8vw, 4rem);
    margin-bottom: 1rem;
  }

  .page-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
  }

  /* Contact Grid */
  .contact-grid {
    display: grid;
    gap: 2rem;
  }

  @media (min-width: 1024px) {
    .contact-grid {
      grid-template-columns: 1fr 380px;
      gap: 3rem;
    }
  }

  /* Form */
  .contact-form-wrapper h2 {
    margin-bottom: 2rem;
    font-size: 1.5rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: block;
    font-weight: 500;
    margin-bottom: 0.5rem;
    font-size: 0.9375rem;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 0.875rem 1rem;
    font-family: inherit;
    font-size: 1rem;
    background: var(--color-bg-primary);
    border: 1px solid var(--glass-border);
    border-radius: 0.5rem;
    color: var(--color-text-primary);
    transition: border-color 0.2s ease;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-accent);
  }

  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: var(--color-text-muted);
  }

  .form-group select {
    cursor: pointer;
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .btn-full {
    width: 100%;
  }

  /* Info Cards */
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .info-card h3,
  .social-card h3,
  .response-card h3 {
    font-size: 1.125rem;
    margin-bottom: 1rem;
  }

  .info-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--glass-border);
    color: var(--color-text-secondary);
  }

  .info-item:last-child {
    border-bottom: none;
  }

  .info-item svg {
    color: var(--color-accent);
    flex-shrink: 0;
  }

  .info-item a {
    color: inherit;
    transition: color 0.2s ease;
  }

  .info-item a:hover {
    color: var(--color-accent);
  }

  /* Social */
  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--color-bg-primary);
    border: 1px solid var(--glass-border);
    border-radius: 50%;
    color: var(--color-text-secondary);
    transition: all 0.3s ease;
  }

  .social-link:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
    transform: translateY(-2px);
  }

  /* Response */
  .response-card p {
    line-height: 1.6;
  }

  .response-card strong {
    color: var(--color-accent);
  }
</style>
