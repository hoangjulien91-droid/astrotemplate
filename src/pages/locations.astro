---
/**
 * Page Locations - DJ Steef Line Sono
 */
import Layout from "@/layouts/Layout.astro";
import { getEntry } from "astro:content";

const company = await getEntry("config", "company");

const rentals = [
  {
    title: "Lots de Barriques / Tonneaux",
    description:
      "Location de barriques, tonneaux bordelais et tourets avec plateaux de 75 cm. Idéal pour créer des espaces mange-debout chaleureux et authentiques lors de vos cocktails.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2v20"></path><path d="M4 6V4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v2"></path><path d="M4 18v2a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-2"></path><path d="M5 6c-1.3 2-2 4.4-2 7s.7 5 2 7"></path><path d="M19 6c1.3 2 2 4.4 2 7s-.7 5-2 7"></path></svg>`,
  },
  {
    title: "Guirlandes Lumineuses",
    description:
      "Habillez vos espaces extérieurs ou intérieurs avec nos longues guirlandes guinguettes pour une atmosphère féerique et conviviale.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 18h6"></path><path d="M10 22h4"></path><path d="M12 2v1"></path><path d="M12 7v1"></path><path d="M12 12v3"></path><path d="M12 18v1"></path><circle cx="12" cy="15" r="3"></circle><circle cx="12" cy="4" r="3"></circle></svg>`,
  },
  {
    title: "Lumière Architecturale",
    description:
      "Mise en valeur de votre lieu de réception (murs, façades, arbres) grâce à des projecteurs LED autonomes aux couleurs personnalisables.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2v8"></path><path d="m4.93 10.93 1.41 1.41"></path><path d="M2 18h2"></path><path d="M20 18h2"></path><path d="m19.07 10.93-1.41 1.41"></path><path d="M22 22H2"></path><path d="M16 22v-4a4 4 0 0 0-8 0v4"></path></svg>`,
  },
  {
    title: "Décoration Spécifique",
    description:
      "Vasques à champagne lumineuses, Map Monde décorative et diables de transport pour faciliter la manutention de votre événement.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path><line x1="3" y1="6" x2="21" y2="6"></line><path d="M16 10a4 4 0 0 1-8 0"></path></svg>`,
  },
];

const features = [
  {
    title: "Particuliers & Professionnels",
    description:
      "Notre catalogue de location s'adresse à tous : mariés décorant leur domaine, entreprises organisant un cocktail, ou associations préparant un événement public.",
  },
  {
    title: "Réseau de Prestataires Partenaires",
    description:
      "Au-delà de notre propre matériel, nous pouvons sourcer d'autres types d'équipements grâce à notre solide réseau de partenaires de confiance en Nouvelle-Aquitaine.",
  },
  {
    title: "Livraison sur mesure",
    description:
      "Nous assurons la livraison, l'installation (si nécessaire) et la reprise du matériel directement sur votre lieu de réception dans plusieurs départements : Pyrénées-Atlantiques (64), Landes (40), Gers (32), Gironde (33), Hautes-Pyrénées (65), etc.",
  },
];
---

<Layout
  title={`Locations de Matériel | ${company?.data.name}`}
  description="Location de barriques, tonneaux bordelais, guirlandes et éclairage pour vos événements en Nouvelle-Aquitaine (64, 40, 33)."
>
  <!-- Hero Section -->
  <section class="section page-header relative overflow-hidden">
    <div class="absolute inset-0 z-0">
      <img
        src="/images/event-equipment-rental.png"
        alt="Location de barriques et matériel événementiel"
        class="w-full h-full object-cover filter brightness-50"
        onerror="this.src='/images/service-locations.png'"
      />
      <div
        class="absolute inset-0 bg-linear-to-b from-black/80 via-black/50 to-bg-primary"
      >
      </div>
    </div>

    <div class="container relative z-10 text-center">
      <h1 class="page-title animate-fade-in-up">Locations</h1>
      <p class="page-subtitle animate-fade-in-up animate-delay-200">
        Mobilier et Lumières pour sublimer votre lieu
      </p>
    </div>
  </section>

  <section class="section content-section">
    <div class="container max-w-5xl">
      <!-- Intro text -->
      <div class="text-center mb-20 animate-fade-in-up animate-delay-300">
        <p
          class="text-xl md:text-2xl text-text-primary leading-relaxed mb-6 font-light max-w-4xl mx-auto"
        >
          Mise à disposition de tout type de matériel événementiel. <strong
            class="text-accent font-semibold">Steef Line Sono</strong
          > vous propose à la location un aménagement élégant (mange-debout sur fûts,
          guirlandes) et de la mise en lumière pour sublimer l'ambiance.
        </p>
        <div class="w-16 h-1 bg-accent mx-auto rounded-full"></div>
      </div>

      <!-- Services List / Rentals -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-24">
        {
          rentals.map((rental, index) => (
            <div
              class={`glass p-8 rounded-2xl border border-glass-border hover:border-accent/40 transition-colors duration-300 shadow-[0_4px_30px_rgba(0,0,0,0.1)] hover:shadow-[0_4px_30px_rgba(234,179,8,0.1)] animate-fade-in-up animate-delay-${(index + 2) * 100}`}
            >
              <div class="text-accent mb-6 bg-accent/10 w-16 h-16 rounded-full flex items-center justify-center">
                <Fragment set:html={rental.icon} />
              </div>
              <h3 class="text-2xl font-display font-bold mb-4 tracking-wide">
                {rental.title}
              </h3>
              <p class="text-text-secondary leading-relaxed">
                {rental.description}
              </p>
            </div>
          ))
        }
      </div>

      <!-- Detail Features (Logistics) -->
      <div
        class="glass-card mb-24 p-8 md:p-14 rounded-3xl relative overflow-hidden border-t border-glass-border"
      >
        <div
          class="absolute inset-0 bg-linear-to-tl from-accent/5 to-transparent pointer-events-none"
        >
        </div>
        <div class="relative z-10">
          <div class="text-center mb-16">
            <h2
              class="text-3xl md:text-4xl text-text-primary font-display font-bold mb-4"
            >
              Un Service Simple et Flexible
            </h2>
            <p
              class="text-accent text-lg uppercase tracking-widest font-semibold"
            >
              Conçu pour votre tranquillité d'esprit
            </p>
          </div>

          <div class="space-y-12">
            {
              features.map((feature, idx) => (
                <div
                  class="flex flex-col md:flex-row gap-6 md:gap-12 items-start opacity-0 animate-fade-in-up"
                  style={`animation-delay: ${idx * 200 + 400}ms; animation-fill-mode: forwards;`}
                >
                  <div class="md:w-1/3 shrink-0">
                    <h3 class="text-xl font-bold text-bg-primary bg-accent inline-flex items-center space-x-2 px-6 py-3 rounded-full shadow-[0_0_15px_rgba(234,179,8,0.3)]">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="mr-2"
                      >
                        <>
                          <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" />
                          <polyline points="22 4 12 14.01 9 11.01" />
                        </>
                      </svg>
                      <span>{feature.title}</span>
                    </h3>
                  </div>
                  <div class="md:w-2/3 pt-2">
                    <p class="text-text-secondary leading-relaxed text-lg">
                      {feature.description}
                    </p>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </div>

      <!-- CTA Zone -->
      <div class="text-center mb-12 relative">
        <div class="absolute -inset-4 bg-accent/5 blur-2xl rounded-full z-0">
        </div>
        <div class="relative z-10">
          <h2 class="text-3xl font-bold mb-6 font-display">
            Besoin d'équipement pour votre prochain événement ?
          </h2>
          <p class="text-text-secondary max-w-2xl mx-auto mb-10 text-lg">
            Réservez vos barriques, guirlandes guinguette et éclairages
            architecturaux dès maintenant.
          </p>
          <a
            href="/contact"
            class="btn btn-primary text-lg px-8 py-4 shadow-[0_0_20px_rgba(234,179,8,0.3)] hover:shadow-[0_0_30px_rgba(234,179,8,0.5)] transition-shadow"
          >
            Consulter les tarifs & disponibilités
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .page-header {
    height: 50vh;
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .page-title {
    font-family: var(--font-display);
    font-size: clamp(3rem, 8vw, 5.5rem);
    margin-bottom: 1rem;
    color: white;
    font-weight: 800;
    text-transform: uppercase;
    line-height: 1.1;
    text-shadow: 0 10px 30px rgba(0, 0, 0, 0.9);
    letter-spacing: -0.02em;
  }
  .page-subtitle {
    font-size: clamp(1.25rem, 3vw, 2rem);
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-weight: 600;
    text-shadow: 0 4px 10px rgba(0, 0, 0, 0.8);
  }
</style>
